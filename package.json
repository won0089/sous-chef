{
  "name": "react-redux-boilerplate",
  "version": "1.2.0",
  "description": "React+Redux boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "start": "npm run build && node src/server/server.js",
    "test": "jest --coverage",
    "lint": "eslint --ext js,jsx src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/won0089/react-redux-boilerplate.git"
  },
  "engines": {
    "node": "8.11.0"
  },
  "author": "Richard Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/won0089/react-redux-boilerplate/issues"
  },
  "homepage": "https://github.com/won0089/react-redux-boilerplate#readme",
  "devDependencies": {
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^22.4.3",
    "redux-mock-store": "^1.5.1",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.9.1",
    "webpack-dev-server": "^2.9.5",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "setupFiles": [
      "./setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "^components(.*)": "<rootDir>/src/client/components$1",
      "^containers(.*)": "<rootDir>/src/client/containers$1",
      "^reducers(.*)": "<rootDir>/src/client/reducers$1",
      "^stores(.*)": "<rootDir>/src/client/stores$1",
      "^actions(.*)": "<rootDir>/src/client/actions$1"
    }
  }
}
